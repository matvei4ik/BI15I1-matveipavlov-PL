int Evklid(int m, int c) {
	int t1, t2;
	int q;
	int u2 = 0;
	int v2 = 1;
	while (c > 0) {
		q = m / c;
		t1 = m % c;
		t2 = u2 - q * v2;
		m = c;
		u2 = v2;
		c = t1;
		v2 = t2;
	}
	return u2;
}
